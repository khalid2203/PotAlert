<% layout('/layouts/boilerplate') %>

    <h1>All Reports</h1>
    <div>
        <a href="/reports/new">Create Report</a>
    </div>
    <div>
    </div>
    <table class="table table-striped table-hover">
        <thead class="thead-dark bg-dark text-white">
            <tr>
                <th scope="col">Username</th>
                <th scope="col">Name</th>
                <th scope="col">State</th>
                <th scope="col">Severity</th>
                <th scope="col">Status</th>
                <th scope="col">Date Reported</th>
                <th scope="col">Details</th>

            </tr>
        </thead>
        <tbody>
            <% for(let report of reports) {%>
                <tr>
                    <th>
                        <%= report.author.username %>
                    </th>
                    <td>
                        <%= report.name %>
                    </td>
                    <td>
                        <%= report.state %>
                    </td>
                    <% if(report.soverity=="LOW" ){ %>
                        <td class="text-success">
                            <%= report.soverity %>
                        </td>
                        <%} else if(report.soverity=="MEDIUM" ){ %>
                            <td class="text-primary">
                                <%= report.soverity %>
                            </td>
                            <%} else{ %>
                                <td class="text-danger">
                                    <%= report.soverity %>
                                </td>
                                <% } %>

                                    <% if (report.works.length) {%>
                                        <% if(report.works[0].status=="Approved" ){ %>
                                            <td class="text-primary">
                                                <%= report.works[0].status %>
                                            </td>
                                            <% }else if(report.works[0].status=="In progress" ) {%>
                                                <td class="text-warning">
                                                    <%= report.works[0].status %>
                                                </td>
                                                <%} else {%>
                                                    <td class="text-success">
                                                        <%= report.works[0].status %>
                                                    </td>
                                                    <% } %>
                                                        <% }else{ %>
                                                            <td class="text-danger">
                                                                Pending
                                                            </td>
                                                            <% } %>
                                                                <td class="text-muted">
                                                                    <%= report.date %>
                                                                </td>
                                                                <td><a class="btn btn-primary btn-sm"
                                                                        href="/reports/<%= report._id %>">
                                                                        View Details
                                                                    </a></td>
                </tr>

                <% } %>
        </tbody>
    </table>


